<div class="hero-parallax">
  <div class="parallax-bg"></div>
  
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.heading }}</h1>
    <p class="hero-subtitle">{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="hero-cta">{{ section.settings.button_text }}</a>
  </div>
  
  <div class="floating-products">
    {% for block in section.blocks %}
      <div class="floating-product animate-float" style="animation-delay: {{ forloop.index | times: 0.2 }}s;">
        {% if block.settings.product != blank %}
          <a href="{{ block.settings.product.url }}">
            <img 
              src="{{ block.settings.product.featured_image | img_url: '150x150', crop: 'center' }}" 
              alt="{{ block.settings.product.title }}"
              width="150"
              height="150"
              loading="lazy"
            >
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Parallax",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "WanderWoll essentials"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Nachhaltige Merino-Produkte und Tech-Essentials f√ºr digitale Nomaden"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Jetzt entdecken"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Featured Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Parallax",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
