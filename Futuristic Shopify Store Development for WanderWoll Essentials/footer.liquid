<div class="theme-footer">
  <div class="footer-container">
    <div>
      <img src="{{ 'wanderwoll-logo.svg' | asset_url }}" alt="{{ shop.name }}" class="footer-logo" width="150" height="50">
      <p class="footer-about">{{ section.settings.about_text }}</p>
      <div class="social-links">
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" class="social-link" target="_blank" rel="noopener" aria-label="Facebook">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M18 2H15C13.6739 2 12.4021 2.52678 11.4645 3.46447C10.5268 4.40215 10 5.67392 10 7V10H7V14H10V22H14V14H17L18 10H14V7C14 6.73478 14.1054 6.48043 14.2929 6.29289C14.4804 6.10536 14.7348 6 15 6H18V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
        
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" class="social-link" target="_blank" rel="noopener" aria-label="Instagram">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17 2H7C4.23858 2 2 4.23858 2 7V17C2 19.7614 4.23858 22 7 22H17C19.7614 22 22 19.7614 22 17V7C22 4.23858 19.7614 2 17 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M16 11.37C16.1234 12.2022 15.9813 13.0522 15.5938 13.799C15.2063 14.5458 14.5931 15.1514 13.8416 15.5297C13.0901 15.9079 12.2384 16.0396 11.4078 15.9059C10.5771 15.7723 9.80976 15.3801 9.21484 14.7852C8.61991 14.1902 8.22773 13.4229 8.09406 12.5922C7.9604 11.7615 8.09206 10.9099 8.47032 10.1584C8.84858 9.40685 9.45418 8.79374 10.201 8.40624C10.9478 8.01874 11.7978 7.87659 12.63 8C13.4789 8.12588 14.2648 8.52146 14.8717 9.12831C15.4785 9.73515 15.8741 10.5211 16 11.37Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"/>
            </svg>
          </a>
        {% endif %}
        
        {% if section.settings.twitter_url != blank %}
          <a href="{{ section.settings.twitter_url }}" class="social-link" target="_blank" rel="noopener" aria-label="Twitter">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M23 3C22.0424 3.67548 20.9821 4.19211 19.86 4.53C19.2577 3.83751 18.4573 3.34669 17.567 3.12393C16.6767 2.90116 15.7395 2.9572 14.8821 3.28445C14.0247 3.61171 13.2884 4.1944 12.773 4.95372C12.2575 5.71303 11.9877 6.61234 12 7.53V8.53C10.2426 8.57557 8.50127 8.18581 6.93101 7.39545C5.36074 6.60508 4.01032 5.43864 3 4C3 4 -1 13 8 17C5.94053 18.398 3.48716 19.0989 1 19C10 24 21 19 21 7.5C20.9991 7.22145 20.9723 6.94359 20.92 6.67C21.9406 5.66349 22.6608 4.39271 23 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
      </div>
    </div>
    
    <div>
      <h3 class="footer-heading">{{ section.settings.menu_heading }}</h3>
      <ul class="footer-links">
        {% for link in linklists[section.settings.footer_menu].links %}
          <li class="footer-link-item">
            <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    
    <div>
      <h3 class="footer-heading">{{ section.settings.legal_heading }}</h3>
      <ul class="footer-links">
        {% for link in linklists[section.settings.legal_menu].links %}
          <li class="footer-link-item">
            <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
    
    <div>
      <h3 class="footer-heading">{{ section.settings.newsletter_heading }}</h3>
      <p>{{ section.settings.newsletter_text }}</p>
      
      {% form 'customer', class: 'newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input type="email" name="contact[email]" class="newsletter-input" placeholder="Email" required>
        <button type="submit" class="newsletter-button">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M18 2L9 11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M18 2L12 18L9 11L2 8L18 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      {% endform %}
    </div>
  </div>
  
  <div class="footer-bottom">
    <div class="copyright">
      &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
    </div>
    
    {% if section.settings.show_payment_icons %}
      <div class="payment-icons">
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "about_text",
      "label": "About text",
      "default": "WanderWoll essentials bietet nachhaltige Merino-Produkte und Tech-Accessoires für digitale Nomaden und Outdoor-Enthusiasten."
    },
    {
      "type": "text",
      "id": "menu_heading",
      "label": "Menu heading",
      "default": "Entdecken"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "legal_heading",
      "label": "Legal heading",
      "default": "Rechtliches"
    },
    {
      "type": "link_list",
      "id": "legal_menu",
      "label": "Legal menu",
      "default": "legal"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter heading",
      "default": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Abonniere unseren Newsletter für exklusive Angebote und Neuigkeiten."
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "Alle Rechte vorbehalten."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    }
  ]
}
{% endschema %}
